{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "types": ["vitest/globals"],
    "paths": {
      "@/*": ["./src/*"],
      "@hyperse/wizard": ["../packages/wizard/dist/index.d.ts"],
      "@hyperse/wizard-plugin-error": [
        "../packages/wizard-plugin-error/dist/index.d.ts"
      ],
      "@hyperse/wizard-plugin-version": [
        "../packages/wizard-plugin-version/dist/index.d.ts"
      ],
      "@hyperse/wizard-plugin-help": [
        "../packages/wizard-plugin-help/dist/index.d.ts"
      ],
      "@hyperse/wizard-plugin-loader": [
        "../packages/wizard-plugin-loader/dist/index.d.ts"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next-intl.d.ts",
    "next-pages.d.ts",
    "**/*.ts",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.tsx",
    "**/*.mdx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
