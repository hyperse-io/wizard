{
  "name": "@hyperse/wizard-website",
  "version": "0.0.6",
  "description": "Hyperse Wizard Website",
  "private": true,
  "homepage": "https://github.com/hyperse-io/wizard#readme",
  "bugs": {
    "url": "https://github.com/hyperse-io/wizard/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:hyperse-io/wizard.git"
  },
  "license": "GPLv3",
  "type": "module",
  "scripts": {
    "build": "next build && yarn postbuild",
    "postbuild": "next-sitemap && pagefind --site .next/server/app --output-path public/_pagefind",
    "build:ghpage": "cross-env NEXT_BUILD_ENV_OUTPUT='export' next build && yarn postbuild:ghpage",
    "postbuild:ghpage": "next-sitemap && pagefind --site .next/server/app --output-path out/_pagefind",
    "dev": "next dev -p 3000 -H 0.0.0.0 --turbopack",
    "fix-all-files": "eslint . --fix",
    "g:lint-staged-files": "lint-staged --allow-empty",
    "lint": "eslint .",
    "start": "next start -p 3000 -H 0.0.0.0",
    "test": "vitest run",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@heroui/react": "^2.8.3",
    "@hyperse/wizard": "workspace:*",
    "@hyperse/wizard-plugin-error": "workspace:*",
    "@hyperse/wizard-plugin-help": "workspace:*",
    "@hyperse/wizard-plugin-loader": "workspace:*",
    "@hyperse/wizard-plugin-version": "workspace:*",
    "@iconify/react": "^6.0.1",
    "@lottiefiles/dotlottie-react": "^0.15.2",
    "@tailwindcss/typography": "^0.5.16",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "next": "^15.5.2",
    "nextra": "^4.4.0",
    "nextra-theme-docs": "^4.4.0",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@hyperse/eslint-config-hyperse": "^1.4.8",
    "@hyperse/next-config": "^1.0.7",
    "@next/codemod": "^15.5.2",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "commitizen": "^4.3.1",
    "cross-env": "^10.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.34.0",
    "lint-staged": "^16.1.6",
    "next-sitemap": "^4.2.3",
    "pagefind": "^1.4.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "zod": "^4.1.5"
  }
}
