{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": false,
    "noImplicitAny": true,
    "noEmit": false,
    "incremental": true,
    "paths": {
      "@hyperse/wizard-core": ["../wizard-core/src/index.ts"],
      "@hyperse/wizard-utils": ["../wizard-utils/src/index.ts"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["**/*.ts", "**/*.tsx", "../wizard-utils/src/getDirname.ts"],
  "exclude": ["**/node_modules", "**/.*/", "dist", "build"]
}
